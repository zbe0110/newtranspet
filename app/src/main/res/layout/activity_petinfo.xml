<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_petinfo">

    <ImageView
        android:id="@+id/petinfoturn"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="348dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_msg" />

    <TextView
        android:id="@+id/petinfo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="144dp"
        android:text="宠物信息卡"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/modulepet1"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rectangle"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="28dp"
                android:text="体重：27kg"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/qr1"
                app:layout_constraintStart_toEndOf="@+id/length1" />

            <TextView
                android:id="@+id/age1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="56dp"
                android:text="年龄：18个月"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintStart_toEndOf="@+id/cate1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/length1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="28dp"
                android:text="身长：66cm"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pet1" />

            <TextView
                android:id="@+id/petname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="83dp"
                android:text="姓名：Lucky"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pet1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="55dp"
                android:text="种类：金毛犬"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pet1" />

            <ImageView
                android:id="@+id/qr1"
                android:layout_width="61dp"
                android:layout_height="58dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/qr2" />

            <ImageView
                android:id="@+id/pet1"
                android:layout_width="73dp"
                android:layout_height="74dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/pet1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modulepet2"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modulepet1"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="28dp"
                android:text="体重：7.6kg"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/qr2"
                app:layout_constraintStart_toEndOf="@+id/length2" />

            <TextView
                android:id="@+id/length2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="28dp"
                android:text="身长：27cm"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pet2" />

            <TextView
                android:id="@+id/age2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="56dp"
                android:text="年龄：15个月"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintStart_toEndOf="@+id/cate2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:text="种类：巴哥犬"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintStart_toEndOf="@+id/pet2"
                app:layout_constraintTop_toBottomOf="@+id/petname2" />

            <TextView
                android:id="@+id/petname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="27dp"
                android:text="姓名：Tom"
                android:textSize="13dp"
                android:textColor="@color/deepbrown"
                app:layout_constraintStart_toEndOf="@+id/pet2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/pet2"
                android:layout_width="75dp"
                android:layout_height="77dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pet2" />

            <ImageView
                android:id="@+id/qr2"
                android:layout_width="61dp"
                android:layout_height="58dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/qr1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/modulepet2"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/ellipse"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/modulepet1"
        app:layout_constraintTop_toBottomOf="@+id/petinfoturn"
        app:srcCompat="@drawable/ellipse"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/decisionmaking"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/decision"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>